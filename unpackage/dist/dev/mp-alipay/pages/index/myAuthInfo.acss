
.flex {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.align-center {
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.justify-center {
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.justify-between {
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.justify-around {
	-webkit-justify-content: space-around;
	        justify-content: space-around;
}
.margin-bottom {
	margin-bottom: 30rpx;
}
.bodySty {
	padding-top: 70rpx;
}
.hederSty {
	width: 100vw;
	height: 150rpx;
	background-color: #03b277;
	position: fixed;
	left: 0;
	top: 0;
	right: 0;
	z-index: -1;
}
.userInfo {
	z-index: 1;
	padding-bottom: 50rpx;
	border-bottom: 1rpx solid #F1F1F1;
}
.userInfo_avatar>image {
	width: 140rpx;
	height: 140rpx;
	border-radius: 100%;
	border: 10rpx solid white;
	margin-left: 20rpx;
}
.userInfo_name {
	font-size: 36rpx;
	font-weight: bold;
	margin-left: 30rpx;
	margin-right: 10rpx;
}
.userInfo_isAuth {
	padding: 5rpx 10rpx;
	background-color: #dff0e9;
	color: #38b188;
	font-size: 26rpx;
	border-radius: 10rpx;
}
.authBody {
	padding: 30rpx;
}
.authBody_title {
	font-size: 32rpx;
	color: #aeacab;
}
.authBody_title>image {
	width: 40rpx;
	height: 40rpx;
	margin-right: 20rpx;
}
.authInfo{
	width: 550rpx;
	height: 260rpx;
	border-radius: 10rpx;
	background-color: #e7f7fe;
	padding: 40rpx;
}
.authInfo_name{
	font-size: 32rpx;
	font-weight: bold;
	margin-bottom: 20rpx;
}
.authInfo_name>image{
	width: 30rpx;
	height: 30rpx;
	margin-left: 20rpx;
}
.authInfo_contnet{
	font-size: 32rpx;
	color: #97a6ab;
	margin-bottom: 20rpx;
}

